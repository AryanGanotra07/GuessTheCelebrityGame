<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1e6eb"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ec5757"
            android:onClick="startFunction"
            android:padding="30dp"
            android:text="START"
            android:textSize="50sp"
            />



        <ImageView
            android:id="@+id/collage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/collage" />

        <ImageView
            android:id="@+id/celebrityImage"
            android:layout_width="258dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="250dp"
            android:layout_marginLeft="72dp"

            />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="124dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="158dp"
            android:text="10"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="124dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="42dp"
            android:layout_marginStart="0dp"
            android:text="0/0"
            android:textSize="50sp" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/optionLayout"
            android:layout_width="258dp"
            android:layout_height="match_parent"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/celebrityImage"
            android:layout_marginTop="-250dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickOption"
                android:tag="0"
                android:text="Button"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickOption"
                android:tag="1"
                android:text="Button"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickOption"
                android:tag="2"
                android:text="Button"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickOption"
                android:tag="3"
                android:text="Button"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="3"
                app:layout_rowWeight="1" />
        </android.support.v7.widget.GridLayout>

        <ImageView
            android:id="@+id/shinchan"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/shinchan" />

        <TextView
            android:id="@+id/totaltimerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/startButton"
            android:layout_below="@+id/shinchan"
            android:text="00:00"
            android:textSize="50sp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scoreCardTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"

                android:text="Score"
                android:textSize="60sp" />

            <Button
                android:id="@+id/playAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:background="@color/colorAccent"
                android:onClick="playAgain"
                android:text="Play Again"
                android:textSize="20sp" />

        </LinearLayout>



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>